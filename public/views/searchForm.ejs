        <!-- Panel Body -->
        <style>
        .ta-editor {
    min-height: 300px;
    height: auto;
    overflow: auto;
    font-family: inherit;
    font-size: 100%;
    margin: 20px 0;
}</style>
        <div class="panel-body">
            <!-- Creates Form -->
            <form name ="queryForm">
                <div class="form-group">
                    <input type="text" class="form-control" id="keyword" placeholder="keyword" ng-model="formData.keyword">
                </div>
                <!-- Query button. Note that its tied to queryUsers() function from queryCtrl.  -->
                <button type="submit" class="btn btn-success btn-block" ng-click="queryPosts()">Search</button>
            </form>
            <form name ="viewPost" novalidate>
                <!-- Text Boxes and Other User Inputs. Note ng-model binds the values to Angular $scope -->
                <div class="form-group">
                    <input type="hidden" class="form-control" id="id" value="your id" ng-model="formData.id" required readonly>
                </div>
                <div class="form-group">
                    <label for="city">City</label>
                    <input type="text" class="form-control" id="city" value="San Francisco" ng-model="formData.city" required readonly>
                </div>
                <div class="form-group">
                    <label for="province">State / Province</label>
                    <input type="text" class="form-control" id="province" value="California" ng-model="formData.province" required readonly>
                </div>
                <div class="form-group">
                    <label for="country">Country</label>
                    <input type="text" class="form-control" id="country" value="United States" ng-model="formData.country" required readonly>
                </div>
                <div class="form-group">
                    <label for="latitude">Latitude</label>
                    <input type="text" class="form-control" id="latitude" value="39.500" ng-model="formData.latitude" required readonly>
                </div>
                <div class="form-group">
                    <label for="longitude">Longitude</label>
                    <input type="text" class="form-control" id="longitude" value="-98.350" ng-model="formData.longitude" required readonly>
                </div>
                <div class="form-group">
                    <label for="region">Region</label>
                    <input type="text" class="form-control" id="region" value="North America" ng-model="formData.region" required readonly>
                </div>
                <div class="form-group">
                    <label for="accommodation">Accommodation</label>
                    <input type="text" class="form-control" id="accommodation" value="Cow Hollow Motor Inn" ng-model="formData.accommodation" required readonly>
                </div>
                <div class="form-group">
                    <label for="accommodation_alt">Alt. Accommodation</label>
                    <input type="text" class="form-control" id="accommodation_alt" value="Airbnb" ng-model="formData.accommodation_alt" required readonly>
                </div>
                <div class="form-group">
                    <label for="activities">Activities</label>
                    <select class="form-control"  multiple id="activities" ng-model="formData.activities" required disabled>
                    </select>
                  </br>
                    <div class="input-group">
                      <input type="text" class="form-control" id="activity_new" placeholder="add activity" ng-model="formData.activity_new" readonly>
                      <span class="input-group-btn">
                        <button class="btn btn-info" type="button" style = "height: 38px;" ng-click="addActivity()">+</button>
                      </span>
                    </div><!-- /input-group -->
                </div>
                <div class="form-group">
                    <label for="comments">Comments</label>
                    <textarea class="form-control" id="comments" value="Home" text-angular ng-model="htmlVariable" rows="3" required disabled></textarea>
                </div>
            </form>
        </div>

          <form name ="editForm" id="formButtons">
              <button type="submit" id = "editButton" style="visibility: visible" class="btn btn-warning btn-block">Edit</button>
              <button type="submit" id = "deleteButton" style="visibility: visible;" class="btn btn-danger btn-block" ng-click="deletePost()">Delete</button>
          </form>
